[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    migrations,
    staticfiles,
    node_modules,
    .pytest_cache,
    .coverage,
    htmlcov
per-file-ignores =
    # Star Imports are Common in Django Settings Files
    core/settings/*.py:F403,F405