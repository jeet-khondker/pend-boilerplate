# ==================================================
# PEND Tech Stack - Development Environment
# ==================================================
# Configuration for Local Development
# Copy this file to .env for Development : 
# cp .env.development.example .env
# Replace Placeholder Values
# ==================================================

# ----------------------
# Version Configuration
# ----------------------
PYTHON_VERSION=3.13
NODE_VERSION=24
POSTGRES_VERSION=15
REDIS_VERSION=7

# -----------------------
# Database Configuration
# -----------------------
POSTGRES_DB=nexus_pend_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGEME-DEV-DB-PASSWORD

# ---------------------
# Django Configuration
# ---------------------
DJANGO_SETTINGS_MODULE=core.settings.development
DEBUG=True
SECRET_KEY=CHANGEME-DEV-SECRET-KEY
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0

# ----------------
# Database URL
# ----------------
DATABASE_URL=postgresql://postgres:CHANGEME-DEV-PASSWORD@postgres:5432/nexus_pend_dev

# ---------------------
# Redis Configuration
# ---------------------
REDIS_URL=redis://redis:6379/0

# --------------------
# API URLs (Frontend)
# --------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001

# -----------------
# Application URLs
# -----------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# --------------------------------------
# Gunicorn Configuration (Development)
# --------------------------------------
# Fewer Workers for Local Development
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=60

# -----------------------------------
# Celery Configuration (Development)
# -----------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_CONCURRENCY=2

# ----------------------------------
# Email Configuration (Development)
# ----------------------------------
# Use Console Backend for Development (Emails Printed to Console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=localhost
# EMAIL_PORT=1025  # MailHog / MailDev for Local Testing

# ------------------
# Development Tools
# ------------------
# Enable All Development Tools
ENABLE_API_DOCS=True
ENABLE_GRAPHQL_PLAYGROUND=True
ENABLE_ADMIN_PANEL=True
ENABLE_DEBUG_TOOLBAR=True

# ----------------------
# Logging Configuration
# ----------------------
LOG_LEVEL=DEBUG
LOG_FORMAT=verbose

# ----------------------------------------------
# CORS Configuration (Development - Allow All)
# ----------------------------------------------
CORS_ALLOW_ALL_ORIGINS=True

# ---------------------------
# File Upload Configuration
# ---------------------------
MAX_UPLOAD_SIZE=10485760  # 10MB for Development
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.gif,.doc,.docx,.txt,.csv,.xlsx

# --------------------------
# Development Feature Flags
# --------------------------
ENABLE_SWAGGER_UI=True
ENABLE_HOT_RELOAD=True
ENABLE_QUERY_LOGGING=True