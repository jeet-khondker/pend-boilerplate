# =================================================================
# PEND Tech Stack - Docker Environment
# =================================================================
# This File is for Docker Compose Usage
# Copy this to .env in root Directory : cp .env.docker.example .env
# =================================================================

# ----------------------
# Version Configuration
# ----------------------
PYTHON_VERSION=3.13
NODE_VERSION=24
POSTGRES_VERSION=15
REDIS_VERSION=7

# -----------------------
# Database Configuration
# -----------------------
POSTGRES_DB=nexus_pend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ---------------------
# Django Configuration
# ---------------------
DJANGO_SETTINGS_MODULE=core.settings.development
DEBUG=True
SECRET_KEY=CHANGEME-GENERATE-SECRET-KEY-FOR-DOCKER
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ----------------
# Database URL
# ----------------
# Docker uses Service Names from docker-compose.yml
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nexus_pend

# ---------------------
# Redis Configuration
# ---------------------
# Docker uses Service Names from docker-compose.yml
REDIS_URL=redis://redis:6379/0

# --------------------
# API URLs (Frontend)
# --------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001

# ------------------
# Application URLs
# ------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# -----------------------
# Gunicorn Configuration
# -----------------------
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=60

# ----------------------
# Celery Configuration
# ----------------------
# Docker uses Service Names from docker-compose.yml
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_CONCURRENCY=2