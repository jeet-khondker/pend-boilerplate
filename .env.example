# =====================================================
# ⚠️  THIS IS A TEMPLATE FILE - NOT FOR PRODUCTION USE
# ⚠️  All values below are EXAMPLES/PLACEHOLDERS only
# ⚠️  Copy to .env and replace with actual values
# =====================================================

# ----------------------
# Version Configuration
# ----------------------
# Set these to match your Development Environment
PYTHON_VERSION=3.13
NODE_VERSION=24
POSTGRES_VERSION=15
REDIS_VERSION=7

# -----------------------
# Database Configuration
# -----------------------
POSTGRES_DB=pend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGEME-DATABASE-PASSWORD

# ---------------------
# Django Configuration
# ---------------------
# Options : core.settings.development, core.settings.staging, core.settings.production
DJANGO_SETTINGS_MODULE=core.settings.development

# ⚠️ SECURITY WARNING : Keep the Secret Key used in Production Secret!
# Generate A New Key : python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DEBUG=True
SECRET_KEY=CHANGEME-GENERATE-SECRET-KEY

# Comma-Separated List of Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ----------------
# Database URL
# ----------------
# Format : postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:CHANGEME-PASSWORD@postgres:5432/pend

# ---------------------
# Redis Configuration
# ---------------------
REDIS_URL=redis://redis:6379/0

# --------------------
# API URLs (Frontend)
# --------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001

# ------------------
# Application URLs
# ------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# -----------------------
# Gunicorn Configuration
# -----------------------
# Number of Worker Processes (CPU Cores * 2 + 1 is RECOMMENDED)
GUNICORN_WORKERS=4
# Request Timeout (in Seconds)
GUNICORN_TIMEOUT=60

# ----------------------
# Celery Configuration
# ----------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
# Number of Concurrent Worker Processes
CELERY_CONCURRENCY=2

# --------------------
# Node Environment
# --------------------
NODE_ENV=development

# --------------------------------
# Email Configuration (Optional)
